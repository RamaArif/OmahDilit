<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="noActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="noActionBarWhite" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="textInputLabel" parent="Widget.Design.TextInputLayout">
            <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="textContent" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/muli_semibold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppBarWhite" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/putih</item>
        <item name="android:statusBarColor">@color/putih</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TitleBarTextAppearanceAppBar" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="baseText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/muli</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="baseTextSemiBold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/muli_semibold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="baseTextBold" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/muli_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>