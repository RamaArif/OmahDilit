<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPesanan"
    android:orientation="vertical"
    android:background="#f8f8f8">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarWhite">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Detail Model Rambut"
                    android:textAppearance="@style/baseTextBold"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putih"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="Detail Pemesan"
            android:textAppearance="@style/baseTextSemiBold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/detailpesanan_text_namauser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Hernawan Septiansyah"
            android:textAppearance="@style/baseText"
            android:textColor="@color/textdarkGrey"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16"/>

        <TextView
            android:id="@+id/detailpesanan_text_nohp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="|  (+62) 85155439113"
            android:textAppearance="@style/baseText"
            android:textColor="@color/textdarkGrey"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/detailpesanan_text_namauser"
            app:layout_constraintTop_toTopOf="@+id/detailpesanan_text_namauser" />

        <TextView
            android:id="@+id/detailpesanan_text_currentalamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jl. Jojoran 3C no. 29, Kec. Gubeng, Kota Surabaya"
            android:textAppearance="@style/baseText"
            android:textColor="@color/textdarkGrey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/detailpesanan_text_namauser"
            app:layout_constraintTop_toBottomOf="@+id/detailpesanan_text_namauser" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="Detail Alamat"
            android:textAppearance="@style/baseTextSemiBold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailpesanan_text_currentalamat"/>

        <EditText
            android:id="@+id/detailpesanan_input_detailAlamat"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/fieldinputemailpass"
            android:fontFamily="@font/muli_semibold"
            android:hint="Isi Detail Alamat"
            android:inputType="textCapWords"
            android:paddingLeft="18dp"
            android:textColor="@color/textdarkGrey"
            android:textColorHint="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/putih"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_tukangcukur"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView17"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="Tukang Cukur"
            android:textAppearance="@style/baseTextSemiBold"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/detailpesanan_image_tukangcukur"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintWidth_percent="0.15" />

        <TextView
            android:id="@+id/detailpesanan_text_namaTukangCukur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Anharu Wikotama"
            android:textAppearance="@style/baseTextSemiBold"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/detailpesanan_image_tukangcukur"
            app:layout_constraintTop_toTopOf="@+id/detailpesanan_image_tukangcukur" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Jarak : "
            android:textAppearance="@style/baseText"
            android:textColor="@color/textGrey"
            app:layout_constraintStart_toStartOf="@+id/detailpesanan_text_namaTukangCukur"
            app:layout_constraintTop_toBottomOf="@+id/detailpesanan_text_namaTukangCukur" />

        <TextView
            android:id="@+id/detailpesanan_text_jaraktukangcukur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Km"
            android:textAppearance="@style/baseText"
            android:textColor="@color/textGrey"
            app:layout_constraintStart_toEndOf="@+id/textView18"
            app:layout_constraintTop_toTopOf="@+id/textView18" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD"
            app:layout_constraintTop_toBottomOf="@+id/detailpesanan_image_tukangcukur" />

        <TextView
            android:id="@+id/detailpesanan_text_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="15.000"
            android:textAppearance="@style/baseTextBold"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Total :"
            android:textAppearance="@style/baseTextSemiBold"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/detailpesanan_text_harga"
            app:layout_constraintTop_toTopOf="@+id/detailpesanan_text_harga"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/detailpesanan_button_pilihModelRambut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="7dp"
        android:layout_marginHorizontal="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/putih"
            android:paddingVertical="12dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_modelrambut"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Pilih Model Rambut"
                android:textSize="14sp"
                android:textAppearance="@style/baseTextSemiBold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_next"
                android:tint="#232323"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.035" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailpesanan_layout_modelRambutDipilih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/putih"
        android:paddingBottom="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/detailpesanan_button_repickModelRambut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.1"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="Model Rambut"
            android:textAppearance="@style/baseTextSemiBold"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/putih"
            android:elevation="7dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintDimensionRatio="3:3.5"
            app:layout_constraintStart_toStartOf="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            app:layout_constraintWidth_percent="0.11">

            <ImageView
                android:id="@+id/detailpesanan_image_modelRambut"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/detailpesanan_text_namaModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Pompador"
            android:textAppearance="@style/baseTextSemiBold"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Gaya Rambut : "
            android:textAppearance="@style/baseText"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/detailpesanan_text_namaModel"
            app:layout_constraintTop_toBottomOf="@+id/detailpesanan_text_namaModel" />

        <TextView
            android:id="@+id/detailpesanan_text_gayaRambut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laki - Laki"
            android:textAppearance="@style/baseText"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/textView21"
            app:layout_constraintTop_toTopOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Model Rambut : "
            android:textAppearance="@style/baseText"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/detailpesanan_text_modelRambut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="Rambut akan dipotong rapi bagian samping dan belakang. Bagian depan akan dibuat bervolume."
            android:textAppearance="@style/baseText"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView22"
            app:layout_constraintTop_toTopOf="@+id/textView22" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailpesanan_button_pilihMetodePembayaran"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/putih">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_money"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.065" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Pembayaran Tunai di Tempat"
            android:textAppearance="@style/baseTextSemiBold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <TextView
            android:id="@+id/detailpesanan_button_konfirmasiPesanan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Konfirmasi Pesanan"
            android:textAppearance="@style/baseTextBold"
            android:textColor="@color/putih"
            android:textAlignment="center"
            android:background="#0063AD"
            app:layout_constraintHeight_percent="0.6"
            android:gravity="center"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>