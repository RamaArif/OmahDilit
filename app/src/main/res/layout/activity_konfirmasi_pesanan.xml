<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KonfirmasiPesanan"
    android:orientation="vertical"
    android:background="@color/pageBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarWhite">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarKonfirmasiPesanan"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="72dp"
                    android:text="Detail Pesanan"
                    android:textAppearance="@style/baseTextBold"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/konfirmasipesanan_button_konfirmasiPesanan">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih"
                    android:paddingBottom="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="12dp"
                        android:text="Detail Pemesan"
                        android:textAppearance="@style/baseTextSemiBold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_namauser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:text="Hernawan Septiansyah"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textdarkGrey"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView16" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_nohp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="|  (+62) 85155439113"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textdarkGrey"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/konfirmasipesanan_text_namauser"
                        app:layout_constraintTop_toTopOf="@+id/konfirmasipesanan_text_namauser" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="12dp"
                        android:text="Alamat Pemesanan"
                        android:textAppearance="@style/baseTextSemiBold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/konfirmasipesanan_text_nohp" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_input_alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/fieldinputemailpass"
                        android:textAppearance="@style/baseText"
                        android:gravity="center_vertical"
                        android:hint="Masukkan Alamat Pemesanan"
                        android:minHeight="40dp"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="7dp"
                        android:textColor="@color/textdarkGrey"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView19" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/putih"
                    android:paddingVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/layout1">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="24dp"
                        android:src="@drawable/ic_tukangcukur"
                        app:layout_constraintBottom_toBottomOf="@+id/textView17"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView17"
                        app:layout_constraintWidth_percent="0.05" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Tukang Cukur"
                        android:textSize="17sp"
                        android:textAppearance="@style/baseTextSemiBold"
                        app:layout_constraintStart_toEndOf="@+id/imageView2"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/konfirmasipesanan_image_tukangcukur"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        app:layout_constraintWidth_percent="0.15" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_namaTukangCukur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Anharu Wikotama"
                        android:textAppearance="@style/baseTextSemiBold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/konfirmasipesanan_image_tukangcukur"
                        app:layout_constraintTop_toTopOf="@+id/konfirmasipesanan_image_tukangcukur" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_jaraktukangcukur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Km dari kamu"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textGrey"
                        app:layout_constraintStart_toStartOf="@+id/konfirmasipesanan_text_namaTukangCukur"
                        app:layout_constraintTop_toBottomOf="@+id/konfirmasipesanan_text_namaTukangCukur"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/konfirmasipesanan_button_pilihModelRambut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="7dp"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/layout2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/putih"
                        android:paddingVertical="12dp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="24dp"
                            android:src="@drawable/ic_modelrambut"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.06" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:text="Pilih Model Rambut"
                            android:textSize="18sp"
                            android:textAppearance="@style/baseTextSemiBold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_next"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.035"
                            app:tint="#232323" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/konfirmasipesanan_layout_modelRambutDipilih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/putih"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/konfirmasipesanan_button_pilihModelRambut">

                    <ImageView
                        android:id="@+id/konfirmasipesanan_button_repickModelRambut"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.1"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="12dp"
                        android:text="Model Rambut"
                        android:textAppearance="@style/baseTextSemiBold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/putih"
                        android:elevation="7dp"
                        app:cardCornerRadius="5dp"
                        app:layout_constraintDimensionRatio="3:3.5"
                        app:layout_constraintStart_toStartOf="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@+id/textView20"
                        app:layout_constraintWidth_percent="0.15">

                        <ImageView
                            android:id="@+id/konfirmasipesanan_image_modelRambut"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/detailpesanan_text_namaModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Pompador"
                        android:textAppearance="@style/baseTextSemiBold"
                        android:textSize="17sp"
                        app:layout_constraintStart_toEndOf="@+id/cardView"
                        app:layout_constraintTop_toTopOf="@+id/cardView" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Gaya Rambut : "
                        android:textAppearance="@style/baseText"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/detailpesanan_text_namaModel"
                        app:layout_constraintTop_toBottomOf="@+id/detailpesanan_text_namaModel" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_gayaRambut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laki - Laki"
                        android:layout_marginStart="12sp"
                        android:textAppearance="@style/baseText"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/textView21"
                        app:layout_constraintTop_toTopOf="@+id/textView21" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Model Rambut : "
                        android:textAppearance="@style/baseText"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/textView21"
                        app:layout_constraintTop_toBottomOf="@+id/textView21" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_modelRambut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:text="Rambut akan dipotong rapi bagian samping dan belakang. Bagian depan akan dibuat bervolume."
                        android:textAppearance="@style/baseText"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/konfirmasipesanan_text_gayaRambut"
                        app:layout_constraintTop_toTopOf="@+id/textView22" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/konfirmasipesanan_button_pilihPromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/putih"
                    android:paddingVertical="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/konfirmasipesanan_layout_modelRambutDipilih">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="24dp"
                        android:src="@drawable/ic_discount"
                        app:layout_constraintBottom_toBottomOf="@+id/textView4"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView4"
                        app:layout_constraintWidth_percent="0.06" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12sp"
                        android:text="Promo"
                        android:textAppearance="@style/baseTextSemiBold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_potongan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:text="Pilih promo"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textdarkGrey"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/konfirmasipesanan_button_pilihMetodePembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/putih"
                    android:paddingVertical="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/konfirmasipesanan_button_pilihPromo">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="24dp"
                        android:src="@drawable/ic_money"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.06" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="Pembayaran Tunai di Tempat"
                        android:textAppearance="@style/baseTextSemiBold"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:text="0"
                        android:textAppearance="@style/baseTextBold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/konfirmasipesanan_text_total" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Harga cukur rambut"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textdarkGrey"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/imageView4"
                        app:layout_constraintTop_toBottomOf="@+id/textView18" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Biaya penanganan"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textdarkGrey"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/textView26"
                        app:layout_constraintTop_toBottomOf="@+id/textView26" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Potongan"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textdarkGrey"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@+id/textView26"
                        app:layout_constraintTop_toBottomOf="@+id/textView27" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_hargacukur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:text="0"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textdarkGrey"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView26" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_hargapenanganan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:text="0"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textdarkGrey"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView27" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_totalpotongan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:text="0"
                        android:textAppearance="@style/baseText"
                        android:textColor="@color/textdarkGrey"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView28" />

                    <TextView
                        android:id="@+id/konfirmasipesanan_text_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Total "
                        android:textAppearance="@style/baseTextBold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/textView28"
                        app:layout_constraintTop_toBottomOf="@+id/textView28" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/konfirmasipesanan_button_konfirmasiPesanan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#0063AD"
            android:gravity="center"
            android:text="Konfirmasi Pesanan"
            android:textAlignment="center"
            android:textAppearance="@style/baseTextBold"
            android:textColor="@color/putih"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.08" />
    </androidx.constraintlayout.widget.ConstraintLayout>






</LinearLayout>