<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_pilihpromo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putih"
        android:paddingVertical="14dp"
        android:paddingHorizontal="5dp">

        <TextView
            android:id="@+id/item_pilihpromo_namapromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/baseTextSemiBold"
            android:textSize="18sp"
            android:text="Nama Promo"
            android:layout_marginHorizontal="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_pilihpromo_expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berlaku sampai"
            android:layout_marginTop="7dp"
            android:textAppearance="@style/baseText"
            android:textColor="@color/textdarkGrey"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/item_pilihpromo_namapromo"
            app:layout_constraintTop_toBottomOf="@id/item_pilihpromo_namapromo" />

        <TextView
            android:id="@+id/item_pilihpromo_potongan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp1.000"
            android:textAppearance="@style/baseTextSemiBold"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>