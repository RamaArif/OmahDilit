<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="7dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/putih">

        <TextView
            android:id="@+id/text_alert_pesan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Maaf kamu tidak bisa buat pesanan baru, selesaikan pesanan yang aktif atau minta tukang cukur untuk cancel"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            android:textAppearance="@style/baseTextBold"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/button_alert_oke"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_alert_oke"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Oke"
            android:textSize="14sp"
            android:textAppearance="@style/baseTextSemiBold"
            android:textColor="@color/putih"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>