<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="7dp"
    android:layout_marginVertical="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/putih">

        <TextView
            android:id="@+id/text_alert_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert_pesan_COD"
            android:textAlignment="center"
            android:textAppearance="@style/baseTextBold"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@+id/button_alert_oke"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_alert_oke"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Oke"
            android:textAppearance="@style/baseTextSemiBold"
            android:textColor="@color/putih"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>